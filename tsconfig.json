{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],  // Add "jest" here to include Jest globals
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true,
    "allowJs": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"]
}
